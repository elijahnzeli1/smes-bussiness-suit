{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["ESNext", "dom"],
    "baseUrl": ".",
    "types": ["@nativescript/core/ui/styling/css-shadow"],
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.tsx?"],
  "files": ["./references.d.ts"],
  "exclude": ["node_modules", "platforms"]
}
